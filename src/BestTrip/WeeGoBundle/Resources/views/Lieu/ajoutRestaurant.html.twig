{% extends 'BestTripWeeGoBundle::layout.html.twig' %}
{% block include_head %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/owl.carousel.css') }}" media="screen">
    
{% endblock %}
{% block include_foot %}         <script type="text/javascript" src="{{ asset('js/owl.carousel.min.js') }}"></script>{% endblock %} 
{% block titre_page %}Lieux{% endblock %}
{% block titre_rubrique %}Ajouter Hotel{% endblock %}  
{% block main_content  %}



   	<form method="POST" class="formulaire" {{ form_enctype(form) }}>  	 

        
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        {{form_label(form.nom)}}               
                        {{ form_widget (form.nom) }}	
                    </div>
                    <div class="col-md-6">
                        {{form_label(form.siteweb)}}      
                        {{ form_widget (form.siteweb) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{form_label(form.adresse)}}  
                        {{ form_widget (form.adresse) }} 
                    </div>
                    <div class="col-md-6">
                          {{form_label(form.jRepos)}}                      
                                                {{ form_widget (form.jRepos, {'attr': {'placeholder': 'Jours Repos'}}) }} 	
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                             {{form_label(form.specialite)}}	     
                                                {{ form_widget (form.specialite, {'attr': {'placeholder': 'Specialit√©:'}}) }} 
                    </div>
                    <div class="col-md-6">
                       {{form_label(form.reservation)}}     
                                                {{ form_widget (form.reservation, {'attr': {'placeholder': 'Reservation'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{form_label(form.numtel)}}                  
                        {{ form_widget (form.numtel) }}
                    </div>
                    <div class="col-md-6">
                        {{form_label(form.idVille)}}
                        {{ form_widget (form.idVille) }}
                    </div>
                </div>
                <div class="row">
                     <div class="col-md-6">
                        {{form_label(form.file)}}
                        {{ form_widget (form.file) }}
                    </div>
                    <input type="submit" value="Ajouter">
                </div>
            </div>
            

        
    </form>
{% endblock %}                           