                <div class="col-md-6">
                    {{form_label(form.specialite)}}	     
                    {{ form_widget (form.specialite, {'attr': {'placeholder': 'Specialit√©:'}}) }} 
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{form_label(form.numtel)}}                  
                    {{ form_widget (form.numtel, {'attr': {'placeholder': 'Numero Tel'}}) }}
                </div>
                <div class="col-md-6">
                    {{form_label(form.idVille)}}
                    {{ form_widget (form.idVille) }}
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Modifier"/>
            </div>

        </div>


    </form>
{% endblock %}                           